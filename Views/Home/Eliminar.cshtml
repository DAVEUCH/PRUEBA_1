@model PRUEBA_01.Models.Usuario
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">Estas seguro de eliminar el usuario</h3>

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdUsuario" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre completo</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Apellido">Apellido completo</label>
                <input class="form-control form-control-sm" asp-for="Apellido" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Edad">Edad</label>
                <input class="form-control form-control-sm" asp-for="Edad" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="IdTipo">Tipo</label>
                <input class="form-control form-control-sm" asp-for="oTipo.Descripcion" type="text" disabled />
            </div>

            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>


        </form>

    </div>

</div>



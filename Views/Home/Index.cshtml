@model List<PRUEBA_01.Models.Usuario>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de Usuarios</h5>
    </div>

    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Usuario_Detalle" asp-controller="Home" asp-route-idUsuario="0">Crear nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Tipo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                      <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                     <td>@item.Edad</td>
                     <td>@item.oTipo.Descripcion</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Usuario_Detalle" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

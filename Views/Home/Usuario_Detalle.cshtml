@model PRUEBA_01.Models.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Usuario_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oUsuario.IdUsuario==0)
{
    <h1>Crear Usuario</h1>
}
else
{
    <h1>Editar Usuario</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Usuario_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oUsuario.IdUsuario"/>

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Nombre">Nombre completo</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Apellido">Apellido completo</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Apellido" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.Edad">Edad</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.Edad" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oUsuario.oTipo.IdTipo">Tipo</label>
                <select class="form-select form-select-sm" asp-for="oUsuario.IdTipo" asp-items="@Model.oListaTipo">
                    <option selected disabled>Seleccionar</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oUsuario.IdUsuario == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" >Volver</a>
            </div>
            

        </form>

    </div>

</div>

